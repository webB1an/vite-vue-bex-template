{
  "manifest_version": 3,
  "name": "vite-vue-bex-template",
  "version": "1.0",
  "description": "vite-vue-bex-template",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module",
    "persistent": false
  },
  "host_permissions": ["<all_urls>"],
  "permissions": [
    "bookmarks",
    "storage",
    "nativeMessaging"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  }
}
